<!-- 희라: 관리자 메뉴 -->
<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>PETPET - Manage</title>

    <!-- Bootstrap core CSS -->
    <link href="http://localhost:3000/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <style>
      body {
        padding-top: 54px;
      }
      @media (min-width: 992px) {
        body {
          padding-top: 56px;
        }
      }

    </style>

  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/">PITAPET</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">

            <%
            if(id != "seller" && id != "manager"){
              %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="/productBoard" id="navbarDropdownPortfolio" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Shop
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPortfolio">
                <a class="dropdown-item" href="/productBoard/foodList/1">Food</a>
                <a class="dropdown-item" href="/productBoard/clothesList/1">Clothes</a>
                <a class="dropdown-item" href="/productBoard/toyList/1">Toy</a>
                <a class="dropdown-item" href="/productBoard/healthCareList/1">Health Care</a>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/infoboard">Community</a>
            </li>
            <%}%>
            <%
            if(id == "seller" || id == "manager"){
              %>
              <li class="nav-item">
                <a class="nav-link" href="/chart">Seller</a>
              </li>
                <%if(id == "manager"){%>
                  <li class="nav-item">
                    <a class="nav-link" href="users/manage">Manager</a>
                  </li>
                <%}%>
              <%}%>
            <%
            if(id == null){
              %>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <%
            }
            else if(id != "seller" && id != "manager"){
              %>
              <li class="nav-item">
                <a class="nav-link" href="/cart">Cart</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users">Mypage</a>
              </li>
              <%
            }
            %>
            <%
            if(id != null){
              %>
              <li class="nav-item">
                <a class="nav-link" href="/login/logout">Logout</a>
              </li>
              <%
              }
              %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
    <div class="row" style="margin-top:100px">
      <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form action="/users/manager" enctype="multipart/form-data" method="post">
          <fieldset>
            <h3><small>Seller & Manager password</small></h3>
            <p></p>
            <input type= "hidden" name="pic" value="<%=pic%>"/>
            <div class="form-group">
              <input type="password" name="password_seller" id="password_seller" class="form-control input-lg" placeholder="판매자의 패스워드" required>
            </div>
            <div class="form-group">
              <input type="password" name="password_manager" id="password_manager" class="form-control input-lg" placeholder="관리자의 패스워드" required>
            </div>
            <h3><small>Main page pop-up</small></h3>
            <div class="form-group">
              <input type="file" name="popup" id="popup"/>
            </div>
            <div class="row" >
              <div class="col-xs-6 col-sm-6 col-md-6">
                <input type="submit" class="btn btn-lg btn-success btn-block"  value="수정하기"  style="border:none;background-color:#C593FF;">
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
